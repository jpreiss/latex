% For Matplotlib's .pgf output that uses external bitmaps.
\newcommand\inputpgf[2]{{
	\let\pgfimageWithoutPath\pgfimage
	\renewcommand{\pgfimage}[2][]{\pgfimageWithoutPath[##1]{#1/##2}}
	\subimport{#1}{#2}
}}

